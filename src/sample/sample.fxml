<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<HBox xmlns:fx="http://javafx.com/fxml/1" prefHeight="480.0" prefWidth="640.0" spacing="10.0"
      xmlns="http://javafx.com/javafx/8.0.171" fx:controller="sample.Controller">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
    <Pane fx:id="shapePane" prefHeight="200.0" prefWidth="200.0"
          style="-fx-background-color: white; -fx-border-color: lightgray;" HBox.hgrow="ALWAYS"/>
    <VBox prefHeight="200.0" prefWidth="75.0">
        <Label text="Размер">
            <VBox.margin>
                <Insets bottom="2.0"/>
            </VBox.margin>
        </Label>
        <Spinner fx:id="sizeSpinner" editable="true" prefHeight="25.0" prefWidth="90.0"/>
        <VBox alignment="CENTER" maxHeight="1.7976931348623157E308" VBox.vgrow="ALWAYS">
            <VBox.margin>
                <Insets/>
            </VBox.margin>
            <TitledPane alignment="CENTER" animated="false" collapsible="false" contentDisplay="CENTER"
                        graphicTextGap="0.0" maxHeight="480.0" text="Масштаб" VBox.vgrow="ALWAYS">
                <padding>
                    <Insets bottom="10.0" left="5.0" right="5.0" top="10.0"/>
                </padding>
                <Slider fx:id="scaleSlider" majorTickUnit="10.0" max="200.0" min="20.0"
                        minorTickCount="0" orientation="VERTICAL" showTickLabels="true"
                        showTickMarks="true" value="100.0">
                    <padding>
                        <Insets bottom="8.0" left="5.0" right="5.0" top="8.0"/>
                    </padding>
                </Slider>
            </TitledPane>
        </VBox>
        <Label text="Площадь">
            <VBox.margin>
                <Insets bottom="2.0"/>
            </VBox.margin>
        </Label>
        <TextField fx:id="squareField" alignment="CENTER_RIGHT" editable="false" prefHeight="25.0"
                   prefWidth="90.0"/>
    </VBox>
</HBox>
